@model IEnumerable<Chandrakanth_CRUD.Models.Book>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3">Chandra CRUD Operations Using .NET Core 3</h1>

    <div class="col mb-3">
        <a asp-controller="Book" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add Book</a>
        <a asp-controller="Book" asp-action="Index2" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Sort By Author Name and Title</a>
    </div>
    <div class="col mb-3">
        <label class="btn btn-lg btn-info"><i class="bi bi-file-plus-fill"></i>Total Price : @TempData["Totalprice"] </label>
    </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Book Title</th>
                    <th scope="col">Publisher</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Style</th>
                    <th scope="col">Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td width="20%">
                        @item.Title
                    </td>
                    <td width="20%">
                        @item.Publisher
                    </td>
                    <td width="25%">
                        @item.AuthorLastName
                    </td>
                    <td width="20%">
                        @item.AuthorFirstName
                    </td>
                    <td width="20%">
                        @item.Style_Citation
                    </td>
                    <td width="20%">
                        @item.Price
                    </td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@item.Book_id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Book_id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
