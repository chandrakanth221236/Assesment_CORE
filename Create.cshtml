@model Book


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add New Book</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Enter Title">
                <span asp-validation-for="Title" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Publisher">Publisher</label>
                <input type="text" class="form-control mb-3" asp-for="Publisher" placeholder="Enter Publisher">
                <span asp-validation-for="Publisher" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="AuthorFirstName">AuthorFirstName</label>
                <input type="text" class="form-control mb-3" asp-for="AuthorFirstName" placeholder="Enter AuthorFirstName">
                <span asp-validation-for="AuthorFirstName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="AuthorLastName">AuthorLastName</label>
                <input type="text" class="form-control" asp-for="AuthorLastName" placeholder="Enter AuthorLastName">
                <span asp-validation-for="AuthorLastName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Price">Price</label>
                <input type="text" class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Style_Citation">Style_Citation</label>
                <input type="text" class="form-control" asp-for="Style_Citation" placeholder="Enter Syle Name">
                <span asp-validation-for="Style_Citation" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}