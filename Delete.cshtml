@model Book

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Book</h2>
    </div>

    <form method="post" asp-action="DeleteEmp">
        <input asp-for="Book_id" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Publisher">Publisher</label>
                <input type="text" class="form-control mb-3" asp-for="Publisher" disabled>
                <span asp-validation-for="Publisher" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Publisher">Designation</label>
                <input type="text" class="form-control mb-3" asp-for="Publisher" disabled>
                <span asp-validation-for="Publisher" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Address</label>
                <input type="text" class="form-control mb-3" asp-for="Title" disabled>
                <span asp-validation-for="Title" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Price">Created On</label>
                <input type="text" class="form-control" asp-for="Price" disabled>
                <span asp-validation-for="Price" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}